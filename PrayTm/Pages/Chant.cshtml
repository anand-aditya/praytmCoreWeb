@page
@model PrayTm.Pages.ChantModel
@{
    ViewData["Title"] = "Chant";
}

<html>
<head>
    <link href="~/css/bootstrap.min.css" rel="stylesheet" media="screen">
    <link href="~/css/bootstrap-datetimepicker.min.css" rel="stylesheet" media="screen">
</head>
<body>
    @*<h2>@ViewData["Title"]</h2>*@
    @*<h3></h3>*@
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            @*<img src="~/images/banner1.svg" alt="ASP.NET" class="img-responsive" />*@
            <img src="~/images/123New.jpg" alt="krishna" class="img-responsive" />
            <div class="carousel-caption" role="option">
            </div>
        </div>
    </div>
    <form method="post">
        <div align="center">
            <div align="center" style="color:crimson; font-size:x-large"><marquee direction="left"><strong>Total @Model.Count rounds chanted today by @Model.TotalUsers chanters!</strong></marquee></div>
        </div>
        <div style="background:url(/images/rsz_2krishna.jpg)">
            <div class="carousel-inner" role="listbox">
                <div class="item active">
                    <div style="font-size:medium; margin-left:25px; margin-top:50px;">
                        <label class="col-md-5 control-label" style="color:crimson"><strong>@Model.Message</strong></label>
                        <label style="color:blueviolet"></label>
                    </div>
                    <br />
                    <div style="color:white; font-size:medium; margin-left:25px; margin-bottom:50px;">
                        <label for="dtp_input2" class="col-md-2 control-label">Date</label>
                        <div class="input-group date form_date col-md-5" data-date="" data-date-format="dd MM yyyy" data-link-field="dtp_input2" data-link-format="yyyy-mm-dd">
                            <input class="form-control" size="10" type="text" value="" readonly asp-for="date" required>
                            <span class="input-group-addon"><span class="glyphicon glyphicon-remove"></span></span>
                            <span class="input-group-addon"><span class="glyphicon glyphicon-calendar"></span></span>
                        </div>
                        <input type="hidden" id="dtp_input2" value="" required /><br />
                    </div>
                    <div style="font-size:medium; margin-left:25px;  margin-bottom:50px;">
                        <label class="col-md-2 control-label" style="color:white">Number of rounds</label>
                        @*<select asp-for="rounds" asp-items="Model.RoundsList" style="width: 100px"></select>*@
                        <select asp-for="rounds" asp-items="Model.RoundsList" style="width: 100px" required></select>
                        @*<select asp-for="EnumCountry"  asp-items="Html.GetEnumSelectList<CountryEnum>()"></select>*@
                        @*<input id="txtRounds" type="text" asp-for="rounds">*@

                    </div>
                    <br />
                    <div style="margin-left:25px; margin-bottom:50px;">
                        <label class="col-md-2 control-label">&nbsp;</label>
                        <button type="submit" asp-page-handler="Add" style="width: 100px">Add Rounds</button>
                    </div>
                </div>
                </div>
            </div>
                    @Html.AntiForgeryToken()
    </form>

    <script type="text/javascript" src="~/js/jquery-1.8.3.min.js" charset="UTF-8"></script>
    <script type="text/javascript" src="~/js/bootstrap.min.js"></script>
    <script type="text/javascript" src="~/js/bootstrap-datetimepicker.min.js" charset="UTF-8"></script>
    <script type="text/javascript">
        $('.form_datetime').datetimepicker({
            //language:  'fr',
            weekStart: 1,
            todayBtn: 1,
            autoclose: 1,
            todayHighlight: 1,
            startView: 2,
            forceParse: 0,
            showMeridian: 1
        });
        $('.form_date').datetimepicker({
            language: 'fr',
            weekStart: 1,
            todayBtn: 1,
            autoclose: 1,
            todayHighlight: 1,
            startView: 2,
            minView: 2,
            forceParse: 0
        });
        $('.form_time').datetimepicker({
            language: 'fr',
            weekStart: 1,
            todayBtn: 1,
            autoclose: 1,
            todayHighlight: 1,
            startView: 1,
            minView: 0,
            maxView: 1,
            forceParse: 0
        });
    </script>

</body>
</html>



